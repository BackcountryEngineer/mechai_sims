<?xml version="1.0" ?>
<robot name="mecanum_car" xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- Define robot constants -->
  <xacro:property name="chasis_width" value="0.35"/>
  <xacro:property name="chasis_length" value="0.15"/>
  <xacro:property name="chasis_height" value="0.08"/>

  <xacro:property name="wheel_radius" value="0.07"/>
  <xacro:property name="wheel_width" value="0.065"/>
  <!-- <xacro:property name="wheel_ygap" value="0.12"/> -->
  <xacro:property name="wheel_ygap" value="0.11"/>
  <xacro:property name="wheel_zoff" value="0.012"/>
  <xacro:property name="wheel_xoff" value="0.14"/>

  <link name="base_footprint"/>
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="mecanum_chasis"/>
    <origin xyz="0.0 0.0 ${-(0.07+wheel_zoff)}" rpy="0 0 0"/>
  </joint>

  <!-- robot model-->
  <link name="mecanum_chasis">
    <pose>0 0 0.1</pose>
    <visual>
      <geometry>
        <box size="${chasis_width} ${chasis_length} ${chasis_height}"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.15 0.35 0.08"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <xacro:macro name="left_wheel" params="prefix x_reflect y_reflect">
    <link name="${prefix}_wheel">
      <visual>
        <geometry>
          <mesh filename="file:///home/jing/mechai_ws/src/mechai_sims/meshes/mecanum_wheel_left.STL" scale="0.0014 0.0014 0.0014"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="1"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
      </inertial>
    </link>

    <joint name="${prefix}_hinge" type="continuous">
      <parent link="mecanum_chasis"/>
      <child link="${prefix}_wheel"/>
      <axis xyz="0.0 0.0 1.0"/>
      <origin xyz="${x_reflect*wheel_xoff} ${y_reflect*wheel_ygap} ${-wheel_zoff}" rpy="0 0 0" />
    </joint>
  </xacro:macro>

  <xacro:macro name="right_wheel" params="prefix x_reflect y_reflect">
    <link name="${prefix}_wheel">
      <visual>
        <geometry>
          <mesh filename="file:///home/jing/mechai_ws/src/mechai_sims/meshes/mecanum_wheel_right.STL" scale="0.0014 0.0014 0.0014"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="1"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
      </inertial>
    </link>

    <joint name="${prefix}_hinge" type="continuous">
      <parent link="mecanum_chasis"/>
      <child link="${prefix}_wheel"/>
      <axis xyz="0.0 0.0 1.0"/>
      <origin xyz="${x_reflect*wheel_xoff} ${y_reflect*wheel_ygap} ${-wheel_zoff}" rpy="0 0 0" />
    </joint>
  </xacro:macro>

  <xacro:left_wheel prefix="wheel1" x_reflect="1" y_reflect="1" />
  <xacro:right_wheel prefix="wheel2" x_reflect="1" y_reflect="-1" />
  <xacro:left_wheel prefix="wheel3" x_reflect="-1" y_reflect="-1" />
  <xacro:right_wheel prefix="wheel4" x_reflect="-1" y_reflect="1" />

   <gazebo>
    <plugin name="mecanum_control" filename="libgazebo_ros_planar_move.so">
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <odometryRate>20.0</odometryRate>
      <robotBaseFrame>base_footprint</robotBaseFrame>
    </plugin>
  </gazebo>
</robot>