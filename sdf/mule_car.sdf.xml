<?xml version='1.0'?>
<sdf version='1.7'>
  <model name="mulecar">
    <static>false</static>
    <link name="chassis">
      <pose>0 0 0.6 0 0 0</pose>
      <collision name="chassis_collision">
        <geometry>
          <box>
            <size>0.5 0.5 0.5</size>
          </box>
        </geometry>
      </collision>
      <visual name="chassis_visual">
        <geometry>
          <box>
            <size>0.5 0.5 0.5</size>
          </box>
        </geometry>
      </visual>
    </link>
    
    <link name="front_left_wheel">
      <collision name="wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="front_left_hinge" type="revolute">
      <parent>chassis</parent>
      <child>front_left_wheel</child>
      <axis>
        <xyz>0.0 0.0 1</xyz>
      </axis>
    </joint>

    <link name="front_right_wheel">
      <collision name="wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="front_right_hinge" type="revolute">
      <parent>chassis</parent>
      <child>front_right_wheel</child>
      <axis>
        <xyz>0.0 0.0 1</xyz>
      </axis>
    </joint>

    <link name="back_left_wheel">
      <collision name="wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="back_left_hinge" type="revolute">
      <parent>chassis</parent>
      <child>back_left_wheel</child>
      <axis>
        <xyz>0.0 0.0 1</xyz>
      </axis>
    </joint>

    <link name="back_right_wheel">
      <collision name="wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="back_right_hinge" type="revolute">
      <parent>chassis</parent>
      <child>back_right_wheel</child>
      <axis>
        <xyz>0.0 0.0 1</xyz>
      </axis>
    </joint>

    <sensor type="ray" name="sensor">
      <always_on>true</always_on>
      <update_rate>30</update_rate>
      <visualize>true</visualize>
      <topic>scan</topic>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>0</min_angle>
            <max_angle>6.28</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.1</min>
          <max>12</max>
          <resolution>0.2</resolution>
        </range>
      </ray>
      <plugin name="laser" filename="libgazebo_ros_ray_sensor.so">
          <ros>
            <argument>~/out:=scan</argument>
          </ros>
          <output_type>sensor_msgs/LaserScan</output_type>
          <frame_name>chassis</frame_name>
      </plugin>
    </sensor>
  </model>
</sdf>